package day08Assignment;

public class PerfectNumber {
	
	public static int sumOfFactors(int number){
		
		int sum = 0;
		
		for(int i = 1; i < number/2; i++){
			if(number % i == 0){
				sum =sum + i;
			}
		}
		return sum;
		
	}

	public static void main(String[] args) {
		
		int number = 496;
		sumOfFactors(number);
		
 
	}

}
