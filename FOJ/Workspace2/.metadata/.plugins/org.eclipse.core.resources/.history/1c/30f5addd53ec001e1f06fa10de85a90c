package day08Assignment;

public class AdamNumber {
    public static int squareOfNumber(int num) {
        return num * num;
    }

    public static int reverseOfSquare(int num) {
        int rev = 0;
        while (num > 0) {
            int rem = num % 10;
            rev = (rev * 10) + rem;
            num /= 10;
        }
        return rev;
    }
    
    public static int reverseOfNumber( int number){
    	
    	 int rev = 0;
         while (number > 0) {
             int rem = number % 10;
             rev = (rev * 10) + rem;
             number /= 10;
         }
         return rev;
    	
    	
    }
    
    
    public static void main(String[] args) {
        int number = 12;
        int square = squareOfNumber(number);
        System.out.println("Square of " + number + ": " + square);
        System.out.println("Reverse of square of " + number + ": " + reverseOfSquare(square));
        System.out.println("Reverse of  given number " + number + " is : " + reverseOfNumber(number) );
    }
}
