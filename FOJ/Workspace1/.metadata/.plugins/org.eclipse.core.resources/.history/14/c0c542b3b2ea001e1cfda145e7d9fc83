
package day05;


public class PatternAssignment {
	public static void PrintPattern(int n){
		for(int i = n ;i >= i; i--){
			
			for(int j = 1 ; j <= i ;j++){
				System.out.print("*");
			}
			System.out.println();
		}
		
		for(int i = 2 ; i <= n; i++){
			
			for(int j = 1 ;j <= i ;j++){
				System.out.print("*");
			}
			System.out.println();
		}
	}
	
	

	public static void main(String[] args) {
		
		int n = 5 ;
		PrintPattern(n);

	}

}
