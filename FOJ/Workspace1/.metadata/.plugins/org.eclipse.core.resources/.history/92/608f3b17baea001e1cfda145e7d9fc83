package day05;

public class PatternAssign2 {
    
    public static void printPattern(int n)
    {
        int i, j;
        // outer loop to handle upper part
        for (i = 1; i <= n; i++) {
            // inner loop to print hash symbols
            for (j = 1; j <= i; j++) {
                System.out.print("# "); // Print a hash and a space
            }
            // inner loop to print spaces
            for (j = 1; j <= 2 * (n - i); j++) {
                System.out.print("  "); // Print two spaces for each hash to ensure alignment
            }
            // inner loop to print stars
            for (j = 1; j <= 2 * i - 1; j++) {
                System.out.print("* "); // Print a star and a space
            }
            System.out.println();
        }
 
        // outer loop to handle lower part
        for (i = n - 1; i >= 1; i--) {
            // inner loop to print hash symbols
            for (j = 1; j <= i; j++) {
                System.out.print("# "); // Print a hash and a space
            }
            // inner loop to print spaces
            for (j = 1; j <= 2 * (n - i); j++) {
                System.out.print("  "); // Print two spaces for each hash to ensure alignment
            }
            // inner loop to print stars
            for (j = 1; j <= 2 * i - 1; j++) {
                System.out.print("* "); // Print a star and a space
            }
            System.out.println();
        }
    }
    
    public static void main(String[] args) {
        int n = 5;
        printPattern(n);
    }
}




