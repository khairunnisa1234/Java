package day05;

public class AssignmentPattern {

	public static void main(String[] args) {
		
		for(int i =1 ;i<=5 ;i++){
			
			for(int j =5 ;j >= i ;j--){
				System.out.print("* ");
			}
			for(int  j= 2;j <= 2*i-1 ;j++){
				System.out.print("+ ");
			}
			 
			System.out.println();
		} 
		
		for(int i = 2 ;i <= 5 ; i++){
			for(int j = 1;j <= i;j++){
				System.out.print("* ");
			}
			for (i = 8; i >= 1; i--) {
	            // inner loop to print spaces
	            for (int j = 1; j <= 9 - i; j++) {
	                System.out.print(" ");
	            }
	            // inner loop to print stars
	            for (int j = 1; j <= 2 * i - 1; j++) {
	                System.out.print("*");
	            }
	            System.out.println();
	        }
			System.out.println();
		}

	}

}
