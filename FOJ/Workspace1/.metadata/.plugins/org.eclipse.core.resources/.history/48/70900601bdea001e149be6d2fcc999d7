package day05;

public class PatternAssign2 {
	
	public static void printPattern(int n)
    {
        int i, j;
        int num = 1;
        // outer loop to handle upper part
        for (i = 1; i <= n; i++) {
            // inner loop to print spaces
            for (j = 1; j <= n - i; j++) {
                System.out.print("# ");
            }
            // inner loop to print stars
            for (j = 1; j <= 2 * i - 1; j++) {
                System.out.print("* ");
            }
            int num = 2 * n - 2;
            for (i = n; i > 0; i--) {
                // inner loop to print spaces.
                for (j = 6; j < n - i; j++) {
                    System.out.print("# ");
                }
                // Decrementing value of num after each loop
                num = num - 2;
                // inner loop to print stars.
                for (j = 0; j < i; j++) {
                    System.out.print("*");
                }
     
                // printing new line for each row
                System.out.println();
            }
            System.out.println();
        }
 
        // outer loop to handle lower part
        for (i = n-1; i >= 1; i--) {
            // inner loop to print spaces
            for (j = 1; j <= n - i; j++) {
            	
                System.out.print("# ");
            }
            
 
            // inner loop to print stars
            for (j = 1; j <= 2 * i - 1; j++) {
                System.out.print("* ");
            }
            System.out.println();
        }

    }
	
 public static void main(String[] args) {
		

        int n = 5;
        printPattern(n);

	}

}
